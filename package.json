{
  "name": "mp3-to-spotify",
  "version": "3.6.0",
  "description": "ðŸš€ Sync Local Music & YouTube to Spotify. Match files, compare playlists, and fill gaps. (GUI & CLI)",
  "author": "Topasm",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "install-python": "pip install -r backend/requirements.txt",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.topasm.mp3tospotify",
    "productName": "MP3toSpotify",
    "files": [
      "electron/**/*"
    ],
    "win": {
      "target": ["portable"],
      "icon": "electron/assets/icon.ico",
      "extraResources": [
        {
          "from": "backend/dist/mp3tospotify.exe",
          "to": "backend/mp3tospotify.exe"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.icns",
      "extraResources": [
        {
          "from": "backend/dist/mp3tospotify",
          "to": "backend/mp3tospotify"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "extraResources": [
        {
          "from": "backend/dist/mp3tospotify",
          "to": "backend/mp3tospotify"
        }
      ]
    }
  },
  "keywords": ["spotify", "mp3", "music", "playlist", "electron"],
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Topasm/MP3toSpotify.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
